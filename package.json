{
    "name": "se-electionbot",
    "version": "1.0.0",
    "description": "ElectionBot - a chatbot that answers commonly-asked questions in chat rooms about elections for sites on the Stack Exchange network.",
    "main": "dist/bot/index.js",
    "scripts": {
        "build": "rimraf dist && tsc --project tsconfig.bot.json && npm run copy-files",
        "heroku:all": "sh ./heroku-deploy.sh",
        "typecheck": "tsc --noEmit -p ./tsconfig.bot.json",
        "typecheck:tests": "tsc --noEmit -p ./tsconfig.test.json",
        "start": "node dist/bot/index.js",
        "dev": "node --loader ts-node/esm src/bot/index.js",
        "test": "npm run typecheck && mocha",
        "coverage": "c8 mocha",
        "copy-files": "copyup \"src/server/**/*\" dist/"
    },
    "author": {
        "name": "Samuel Liew",
        "url": "https://so-user.com/584192?tab=profile"
    },
    "contributors": [
        {
            "name": "Oleg Valter",
            "url": "https://stackoverflow.com/users/11407695"
        }
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/samliew/se-electionbot.git"
    },
    "bugs": {
        "url": "https://github.com/samliew/se-electionbot/issues"
    },
    "homepage": "https://github.com/samliew/se-electionbot#readme",
    "engines": {
        "npm": "7.x",
        "node": "16.x"
    },
    "dependencies": {
        "axios": "^0.27.2",
        "chatexchange": "^0.6.4",
        "cheerio": "^1.0.0-rc.11",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "express-handlebars": "^5.3.5",
        "heroku-client": "^3.1.0",
        "html-entities": "^2.3.3",
        "jsdom": "^18.1.1",
        "markdown-it": "^12.3.2",
        "node-cache": "^5.1.2",
        "node-cron": "^3.0.1",
        "patch-package": "^6.4.7",
        "ramda": "^0.28.0",
        "sanitize-html": "^2.7.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/chai-as-promised": "^7.1.5",
        "@types/cheerio": "^0.22.31",
        "@types/express": "^4.17.13",
        "@types/express-handlebars": "^5.3.1",
        "@types/heroku-client": "^3.1.0",
        "@types/jsdom": "^16.2.14",
        "@types/markdown-it": "^12.2.3",
        "@types/mocha": "^9.1.1",
        "@types/node-cron": "^3.0.1",
        "@types/ramda": "^0.28.14",
        "@types/sanitize-html": "^2.6.2",
        "@types/sinon": "^10.0.11",
        "@userscripters/stackexchange-api-types": "^3.4.0",
        "c8": "^7.11.3",
        "chai": "^4.3.6",
        "chai-as-promised": "^7.1.1",
        "copyfiles": "^2.4.1",
        "mocha": "^10.0.0",
        "rimraf": "^3.0.2",
        "sinon": "^11.1.2",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.4"
    },
    "type": "module"
}
